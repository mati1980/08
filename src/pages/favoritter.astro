---
import "../styles/global.css";

import Header from "../components/Navi.astro";
import Footer from "../components/Footer.astro";

import Favorit from "../components/Favorit.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/0d7a458351.js" crossorigin="anonymous"></script>
    <title>Sakura Festival</title>
  </head>
  <body>
    <Header />
    <main>
      <h1>SAVED EVENTS</h1>
      <article class="grid_1-1-1">
        <Favorit title="Wadaiko" about="High powered drum show" />
        <Favorit title="Karate kids" about="Hard hitting martial arts" />
        <Favorit title="Calligraphy" about="Ink painting with soul" />
      </article>
      <img class="blomst" src="/svg/blomst.svg" alt="blomsticon" />

      <Footer />
    </main>
  </body>
</html>

<style>
  .grid_1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    margin: 40px;
    gap: 30px;
  }
  h1 {
    margin-top: 50px;
  }
  .blomst {
    width: 100px;
    margin: auto;
  }
  @media (min-width: 1000px) {
    .blomst {
      width: 200px;
      margin-bottom: 40px;
      margin-left: 40px;
    }
  }
</style>
