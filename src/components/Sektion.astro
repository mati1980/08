---
import Programkort from "./Programkort.astro";

const { day, indhold, stage } = Astro.props;
---

<h1>{day}</h1>

<div class="sektion_grid">
  <h3>{stage}</h3>
  <section>
    {indhold.map((program) => <Programkort link={"/../undersider/" + program.id} imgPath={"/img/" + `${program.image}`} event={program.event} about={program.about} when={program.when} />)}
  </section>
</div>

<style>
  .sektion_grid {
    background-color: var(--primary-40);
    border-radius: 0rem 2rem 0rem 2rem;
  }
  h3 {
    text-align: center;
    padding-top: 2.5rem;
  }
</style>
