---
import Programkort from "./Programkort.astro";

const { day, indhold, stage } = Astro.props;
---

<h1>{day}</h1>
<h2>{stage}</h2>
<section class="sektion">
  {indhold.map((program) => <Programkort link={"/../undersider/" + program.id} event={program.event} association={program.association} when={program.when} />)}
</section>

<style>
  .sektion {
    background-color: var(--primary-40);
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  h2 {
    border-bottom-left-radius: var(--border-radius-box);
    border-top-right-radius: var(--border-radius-box);
  }
</style>
