---
const { header, text } = Astro.props;
---

<h1>{header}</h1>
<div class="grid_4-2">
  <h3>{text}</h3>
  <img class="blomst" src="/svg/blomst.svg" alt="blomsticon" />
</div>

<style>
  h1 {
    margin-top: 3rem;
    margin-bottom: 3rem;
    margin: auto;
    color: var(--primary-100);
    margin-top: 50px;
  }
  h3 {
    color: var(--primary-80);
    font-size: var(--font-size-xxxs);
  }
  span {
    color: var(--tertiary-100);
  }

  .blomst {
    width: 100px;
    margin: auto;
  }

  @media (min-width: 1000px) {
    .blomst {
      width: 200px;
      margin-bottom: 40px;
      margin-left: 40px;
    }
    .grid_4-2 {
      display: grid;
      grid-template-columns: 4fr 2fr;
      gap: 20px;
      margin-top: 20px;
      margin-bottom: 20px;
    }
    h3 {
      font-size: var(--font-size-xs);
    }
  }
</style>
