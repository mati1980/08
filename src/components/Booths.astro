---
const { category, name, about } = Astro.props;
---

<article>
  <div class="hej">
    <h3>{category}</h3>
    <h2>{name}</h2>
    <p>{about}</p>
  </div>
</article>

<style>
  .hej {
    background-color: var(--primary-40);
    border-radius: 0rem 2rem 0rem 2rem;
    padding: 2rem;
    height: 250px;
  }

  .hej:hover {
    scale: 1.04;
  }
</style>
