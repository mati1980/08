<style>
  .fa-heart {
    display: none;
  }
  @media (min-width: 1000px) {
    .fa-heart {
      display: block;
      color: var(--primary-80);
    }
    .fa-heart:hover {
      color: var(--tertiary-100);
    }
  }

  /***FLIP ***/
  .flip {
    display: none;
  }
  @media (min-width: 1000px) {
    .flip_left {
      transform: rotate(-90deg) translate(-100%, 2rem);
      transform-origin: top left;
    }
    .flip_right {
      transform: rotate(90deg) translate(100%, 2rem);
      transform-origin: top right;
      right: 0;
    }
    .flip {
      display: block;
      position: fixed;
      width: 80vh;
      text-align: center;
      font-size: var(--font-size-s);
      font-weight: var(--light);
    }
  }

  /***** MENU *****/

  .logo {
    width: 80px;
    margin-top: 5px;
  }
  @media (min-width: 1000px) {
    .logo {
      width: 100px;
    }
    .logo:hover {
      transform: rotate(10deg);
    }
  }
  .nav_right {
    display: flex;
    align-items: center;
  }

  .nav_right a {
    margin-right: 30px;
  }

  nav ul {
    display: none;
    flex-direction: row;
    list-style: none;
  }
  nav ul li {
    margin: 30px;
    font-size: var(--font-size-m);
    font-weight: var(--light);
  }

  a {
    color: var(--primary-100);
  }

  a:hover {
    color: var(--tertiary-100);
  }
  @media (min-width: 1000px) {
    nav ul {
      display: flex;
    }
  }
  .navbar {
    margin-left: 10px;
    margin-right: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  @media (min-width: 1000px) {
    .navbar {
      margin-left: 30px;
      margin-right: 30px;
    }
  }

  .nav_menu {
    display: none;
  }

  .burger {
    display: block;
    cursor: pointer;
  }

  .bar {
    display: block;
    height: 2px;
    margin: 15px auto;
    background-color: var(--primary-100);
    border-radius: 5px;
  }

  .bar:nth-child(1) {
    width: 45px;
    margin-right: 15px;
  }
  .bar:nth-child(2) {
    width: 60px;
  }
  .bar:nth-child(3) {
    width: 45px;
    margin-left: 15px;
  }
</style>
