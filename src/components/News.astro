---
import Button from "./Buttons.astro";
---

<div class="newsletter">
  <h3 class="subscribe">Subscribe to our newsletter!</h3>
  <form>
    <div class="name">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" />
    </div>
    <div class="email">
      <label for="email">E-mail</label>
      <input type="email" id="email" name="email" />
    </div>
  </form>
  <Button variant="secondary" size="small">Subscribe</Button>
</div>
<style>
  .subscribe {
    font-size: var(--font-size-xs);
    color: var(--secondary-100);
  }
  .name,
  .email {
    display: grid;
    grid-template-columns: 90px 1fr;
    margin-bottom: 1rem;
    margin-top: 1rem;
  }
  label {
    background-color: var(--secondary-80);
    color: var(--primary-30);
    padding: 0.5rem;
    padding-left: 1.7rem;
    border-bottom-left-radius: var(--border-radius-box);
    font-size: var(--font-size-xxxs);
    font-weight: var(--regular);
  }
  input {
    border: none;
    background-color: var(--primary-30);
    padding: 0.5rem;
    border-top-right-radius: var(--border-radius-box);
  }

  .newsletter {
    background-color: var(--secondary-40);
    display: grid;
    padding: 1rem;
    border-bottom-left-radius: var(--border-radius-box);
    border-top-right-radius: var(--border-radius-box);
  }

  @media (min-width: 1000px) {
    form {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
    .newsletter {
      display: grid;
      grid-template-columns: 1fr 200px;
      gap: 10px;
    }
    .subscribe {
      grid-column: 1/3;
      font-size: var(--font-size-s);
    }
  }
  .newsletter {
    margin-left: 10px;
    margin-right: 10px;
    display: grid;
    margin-bottom: 2rem;
  }
  @media (min-width: 1000px) {
    .newsletter {
      margin-left: 7rem;
      margin-right: 7rem;
    }
  }
</style>
